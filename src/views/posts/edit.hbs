<section id="editPage">
  <form id="editForm" method="post">
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" value="{{post.name}}" />

    <label for="type">Type:</label>
    <input type="text" id="type" name="type" value="{{post.type}}" />

    <label for="production">Year of Production:</label>
    <input type="number" id="production" name="production" value="{{post.production}}" />

    <label for="exploitation">Years of Exploitation:</label>
    <input type="number" id="exploitation" name="exploitation" value="{{post.exploitation}}" />

    <label for="damages">Damages:</label>
    <input
      type="text"
      id="damages"
      name="damages"
      value="{{post.damages}}"
    />

    <label for="image">Image:</label>
    <input
      type="text"
      id="image"
      name="image"
      value="{{post.image}}"
    />

    <label for="price">Price:</label>
    <input type="number" id="price" name="price" value="{{post.price}}" />

    <label for="description">Description:</label>
    <input
      type="text"
      id="description"
      name="description"
      value="{{post.description}}"
    />

    <input type="submit" class="edit" value="Edit Offer" />
  </form>
</section>
